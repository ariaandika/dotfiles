#!/bin/bash

s=$(find ~/dev/lab ~/dev/lib-test ~/dev/works ~/dev/ruster ~/dev/ui ~/dev/stash ~/dev/config ~/dev -mindepth 1 -maxdepth 1)
ds=$(echo "$s" | fzf --layout=reverse)

if [[ -z "$ds" ]]; then

elif [[ -d "$ds" ]]; then
  cd "$ds"
elif [[ -f "$ds" ]]; then
  b=$(basename "$ds")
  ds=$(dirname "$ds")
  cd "$ds"
  vim $b
fi

