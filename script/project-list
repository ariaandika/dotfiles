#!/bin/bash

t=""
t="$t $HOME/dev/lab"
t="$t $HOME/dev/lib-test"
t="$t $HOME/dev/ui"
t="$t $HOME/android/tauri"
t="$t $HOME/dev/works"
t="$t $HOME/dev/live-app"
t="$t $HOME/dev/stash"
t="$t $HOME/dev/config"
t="$t $HOME/dev"

s=$(find $(echo $t) -mindepth 1 -maxdepth 1)
ds=$(echo "$s" | fzf --layout=reverse)

if [[ -z "$ds" ]]; then

elif [[ -d "$ds" ]]; then
  cd "$ds"
elif [[ -f "$ds" ]]; then
  cd $(dirname "$ds")
  vim $(basename "$ds")
fi

